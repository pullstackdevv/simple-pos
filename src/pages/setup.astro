---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-black text-gray-900 mb-2">☕ Simple POS</h1>
        <p class="text-gray-600">Setup Database</p>
      </div>

      <!-- Setup Content -->
      <div id="setup-content" class="space-y-6">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <p class="text-sm text-gray-700">
            Click the button below to create database tables and insert sample data.
          </p>
        </div>

        <button
          id="migrate-btn"
          class="w-full bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-bold py-3 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          Run Migrations
        </button>

        <div id="status" class="hidden">
          <div class="bg-gray-50 rounded-lg p-4 space-y-2">
            <div id="logs" class="text-xs text-gray-600 font-mono space-y-1 max-h-48 overflow-y-auto"></div>
          </div>
        </div>

        <div id="success" class="hidden">
          <div class="bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <div>
                <h3 class="font-bold text-green-900 mb-1">Setup Complete!</h3>
                <p class="text-sm text-green-700 mb-3">Database tables have been created successfully.</p>
                <a
                  href="/"
                  class="inline-block bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors"
                >
                  Go to POS System
                </a>
              </div>
            </div>
          </div>
        </div>

        <div id="error" class="hidden">
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <div>
                <h3 class="font-bold text-red-900 mb-1">Setup Failed</h3>
                <p id="error-message" class="text-sm text-red-700"></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <div class="mt-8 pt-6 border-t border-gray-200 text-center text-xs text-gray-500">
        <p>Make sure MySQL is running at host.docker.internal:3308</p>
      </div>
    </div>
  </div>
</Layout>

<script>
  const migrateBtn = document.getElementById('migrate-btn') as HTMLButtonElement;
  const statusDiv = document.getElementById('status') as HTMLElement;
  const logsDiv = document.getElementById('logs') as HTMLElement;
  const successDiv = document.getElementById('success') as HTMLElement;
  const errorDiv = document.getElementById('error') as HTMLElement;
  const errorMessage = document.getElementById('error-message') as HTMLElement;

  migrateBtn.addEventListener('click', async () => {
    migrateBtn.disabled = true;
    statusDiv.classList.remove('hidden');
    successDiv.classList.add('hidden');
    errorDiv.classList.add('hidden');
    logsDiv.innerHTML = '';

    try {
      addLog('Starting database migration...');
      addLog('Connecting to database...');

      const response = await fetch('/api/migrate', {
        method: 'POST',
      });

      const data = await response.json();

      if (response.ok) {
        addLog('✓ Products table created');
        addLog('✓ Transactions table created');
        addLog('✓ Transaction items table created');
        addLog('✓ Sample products inserted');
        addLog('✅ Migration completed successfully!');

        setTimeout(() => {
          statusDiv.classList.add('hidden');
          successDiv.classList.remove('hidden');
        }, 1000);
      } else {
        addLog(`❌ Error: ${data.error}`);
        if (data.details) {
          addLog(`Details: ${data.details}`);
        }
        errorMessage.textContent = data.error || 'Migration failed';
        errorDiv.classList.remove('hidden');
        migrateBtn.disabled = false;
      }
    } catch (error) {
      addLog(`❌ Error: ${error instanceof Error ? error.message : 'Unknown error'}`);
      errorMessage.textContent = error instanceof Error ? error.message : 'Unknown error';
      errorDiv.classList.remove('hidden');
      migrateBtn.disabled = false;
    }
  });

  function addLog(message: string) {
    const logEntry = document.createElement('div');
    logEntry.textContent = message;
    logsDiv.appendChild(logEntry);
    logsDiv.scrollTop = logsDiv.scrollHeight;
  }
</script>
